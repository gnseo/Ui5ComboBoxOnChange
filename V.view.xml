<mvc:View controllerName="sap.m.sample.InputAssisted.C"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<ComboBox selectedKey="{/myKey}" value="{/myKey}" change="onChange" items='{/items}'>
						<core:Item key="{key}" text="{name}"></core:Item>
				</ComboBox>
        <Select selectedKey="{/myKey}" value="{/myKey}" change="onChange" items='{/items}'>
						<core:Item key="{key}" text="{name}"></core:Item>
				</Select>
	</l:VerticalLayout>
</mvc:View>